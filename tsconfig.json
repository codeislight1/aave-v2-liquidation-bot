{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "outDir": "./dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": [
    "helpers",
    "scripts"
  ]
}